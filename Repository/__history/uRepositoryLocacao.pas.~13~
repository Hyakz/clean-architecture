    procedure Alterar(Cliente: TLocacao);
    procedure Excluir(Codigo: Integer);
    function Consultar(Dto: DtoLocacao): TList<TLocacao>;

    property Lista: TList<TLocacao> read FLista write SetLista;
  end;

implementation

